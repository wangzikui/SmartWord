<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true">
        <bitmap android:src="@drawable/tab_person_select" android:tileMode="disabled" android:gravity="center" />
    </item>
    <item android:state_checked="true" >
        <bitmap android:src="@drawable/tab_person_select" android:tileMode="disabled" android:gravity="top" />
    </item>
    <item >
        <bitmap android:src="@drawable/tab_person" android:tileMode="disabled" android:gravity="top" />
    </item >
</selector>